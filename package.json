{
    "name": "tm-proxy",
    "version": "1.0.0",
    "main": "./electron/dist/main.js",
    "scripts": {
        "dev:electron": "cd electron && npm run start",
        "build:electron": "cd electron && npm run build",
        "dev:front": "cd front && npm run start",
        "build:front": "cd front && npm run build",
        "build": "npm run build:front && npm run build:electron",
        "build-win64": "npm run build && electron-builder --windows --x64",
        "build-mac": "npm run build && electron-builder --mac"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@babel/core": "^7.19.6",
        "@babel/preset-env": "^7.19.4",
        "@babel/preset-typescript": "^7.18.6",
        "@types/express": "^4.17.14",
        "@types/kill-port": "^2.0.0",
        "@types/lodash.clonedeep": "^4.5.7",
        "babel-loader": "^9.0.1",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^11.0.0",
        "electron": "^21.2.1",
        "electron-builder": "^23.6.0",
        "typescript": "^4.8.4",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "@babel/preset-react": "^7.18.6",
        "@typescript-eslint/eslint-plugin": "^5.38.1",
        "@typescript-eslint/parser": "^5.38.1",
        "css-loader": "^6.7.1",
        "eslint": "^8.24.0",
        "eslint-plugin-react": "^7.31.8",
        "eslint-webpack-plugin": "^3.2.0",
        "file-loader": "^6.2.0",
        "html-loader": "^4.2.0",
        "html-webpack-plugin": "^5.5.0",
        "less": "^4.1.3",
        "less-loader": "^11.0.0",
        "style-loader": "^3.3.1",
        "webpack-dev-server": "^4.11.1",
        "webpack-merge": "^5.8.0"
    },
    "dependencies": {
        "electron-store": "^8.1.0",
        "electron-updater": "^5.3.0",
        "express": "^5.0.0-beta.1",
        "http-proxy-middleware": "^2.0.6",
        "kill-port": "^2.0.1",
        "lodash.clonedeep": "^4.5.0",
        "tree-kill": "^1.2.2",
        "ansi_up": "^5.1.0",
        "antd": "^4.23.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "reset-css": "^5.0.1"
    },
    "build": {
        "appId": "tm.proxy",
        "asar": true,
        "dmg": {
            "sign": false
        },
        "artifactName": "${productName}${version}.${ext}",
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "favicon.icns"
        },
        "win": {
            "icon": "/favicon.ico",
            "target": [
                "nsis"
            ]
        },
        "productName": "TMProxy",
        "directories": {
            "output": "./dist/"
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "publish": {
            "provider": "generic",
            "url": "http://127.0.0.1:8888/update/"
        }
    }
}
