{
    "name": "tm-proxy-electron",
    "version": "1.0.0",
    "main": "./dist/main.js",
    "scripts": {
        "start": "webpack && electron ./dist/main.js ",
        "build": "webpack --mode=production",
        "app:dist-x64": "electron-builder --windows --x64",
        "app:dist-mac": "electron-builder --mac"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "devDependencies": {
        "@babel/core": "^7.19.6",
        "@babel/preset-env": "^7.19.4",
        "@babel/preset-typescript": "^7.18.6",
        "@types/express": "^4.17.14",
        "@types/kill-port": "^2.0.0",
        "@types/lodash": "^4.14.186",
        "babel-loader": "^9.0.1",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^11.0.0",
        "electron": "^21.2.1",
        "electron-builder": "^23.6.0",
        "file-loader": "^6.2.0",
        "typescript": "^4.8.4",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0"
    },
    "dependencies": {
        "electron-store": "^8.1.0",
        "electron-updater": "^5.3.0",
        "express": "^5.0.0-beta.1",
        "http-proxy-middleware": "^2.0.6",
        "kill-port": "^2.0.1",
        "lodash": "^4.17.21",
        "tree-kill": "^1.2.2"
    },
    "build": {
        "appId": "tm.proxy",
        "asar": true,
        "dmg": {
            "sign": false
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "favicon.icns"
        },
        "productName": "TMProxy",
        "directories": {
            "output": "../dist/"
        },
        "icon": "/favicon.ico",
        "target": [
            "nsis"
        ],
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "publish": {
            "provider": "generic",
            "url": "http://127.0.0.1:8888/update/"
        }
    }
}
